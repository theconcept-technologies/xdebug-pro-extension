{
  "name": "xdebug-pro",
  "version": "1.0.0",
  "description": "A Chrome extension for managing Xdebug sessions with IDE profiles and per-domain state",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "npm run clean && npm run build && npm run zip",
    "clean": "rimraf dist xdebug-pro.zip",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "zip": "ts-node scripts/zip.ts"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/chrome": "^0.0.260",
    "@types/node": "^20.11.28",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "archiver": "^6.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.3"
  }
} 